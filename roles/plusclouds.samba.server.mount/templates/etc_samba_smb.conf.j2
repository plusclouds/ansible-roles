
{% if public is sameas true and private is sameas false%}
#### Public Share ####
[{{ public_share_name }}]
 path = {{ public_share_path }}
 browsable =yes
 writable = yes
 guest ok = yes
 read only = no
 {% elif private is sameas true and public is sameas false %}
#### Private Share ####
[{{ private_share_name }}]
 path = {{ private_share_path }}
 valid users = @{{ samba_group_name }}
 guest ok = no
 writable = yes
 browsable = yes
 create mask = 0700
 directory mask = 0700
 {% endif %}


